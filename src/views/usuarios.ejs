<%- include("partials/_header") %>

  <div class="container mt-4">
    <div class="row">
      <div class="col-md-9">
        <h1 class="">Gestion de los Usuarios</h1>
        <table class="table table-dark table-bordered table-hover">
          <thead>
            <tr>
              <td>n°</td>
              <td>Nombre</td>
              <td>Email</td>
              <td>Estado</td>
              <td>Fecha de creación</td>
              <!-- <td>Fecha de actualización</td> -->
            </tr>
          </thead>
          <tbody>
            <% if (usuarios) { %>
              <% for(var i=0; i < usuarios.length; i++) { %>
                <tr>
                  <td>
                    <%= (i + 1) %>
                  </td>
                  <td>
                    <%= usuarios[i].nombre %>
                  </td>
                  <td>
                    <%= usuarios[i].email %>
                  </td>
                  <td>
                    <%= usuarios[i].estado %>
                  </td>

                  <td class="d-flex gap-2">
                    <a href="/updateUsuario/<%= usuarios[i].id %>" class="btn btn-info">
                      Edit
                    </a>
                    <a href="/deleteUsuario/<%= usuarios[i].id %>" class="btn btn-danger">
                      Delete
                    </a>
                  </td>
                </tr>
                <% } %>
                  <% } %>
          </tbody>
        </table>
      </div>
      <div class="col-md-3">
        <div class="card-body">


          <form action="/usuarios" method="POST">
            <input type="text" name="nombre" placeholder="Nombre" class="form-control mb-2" required autofocus />
            <input type="email" name="email" placeholder="Email" class="form-control mb-2" required autofocus />
            <select name="estado" id="estado" required>
              <option value="Activo" selected>Activo</option>
              <option value="Inactivo">Inactivo</option>
            </select>
            <button type="submit" class="btn btn-info">Guardar usuario</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <%- include("partials/_footer") %>